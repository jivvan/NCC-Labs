@page
@model DeleteBookModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>

<h4>Are you sure you want to delete this book?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Author
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Book.Genre
        </dd>
        <dt class="col-sm-2">
            ISBN
        </dt>
        <dd class="col-sm-10">
            @Model.Book.ISBN
        </dd>
    </dl>

    <form asp-route-id="@Model.Book.Id" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-page="Index">Back to List</a>
    </form>
</div>
